<Window x:Class="VoiceChart.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="VoiceChart" Height="520" Width="760">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Label Content="환자" Width="60" VerticalContentAlignment="Center"/>
            <TextBox Width="180" Margin="8,0,0,0" Text="{Binding PatientName, UpdateSourceTrigger=PropertyChanged}" />
            <Label Content="의사" Width="60" VerticalContentAlignment="Center" Margin="16,0,0,0"/>
            <TextBox Width="180" Margin="8,0,0,0" Text="{Binding ClinicianName, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,12,0,12">
            <Button Width="140" Height="32" Content="녹음 시작 (핫키)" Command="{Binding StartCommand}" />
            <Button Width="140" Height="32" Content="완료/중지" Command="{Binding CompleteCommand}" Margin="12,0,0,0"/>
            <Button Width="140" Height="32" Content="내보내기(클립보드)" Command="{Binding ExportCommand}" Margin="12,0,0,0"/>
            <TextBlock VerticalAlignment="Center" Text="{Binding Status}" Margin="12,0,0,0"/>
        </StackPanel>

        <GroupBox Header="요약" Grid.Row="2" Margin="0,0,0,8">
            <TextBox Text="{Binding Summary}" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
        </GroupBox>

        <GroupBox Header="SOAP" Grid.Row="3">
            <Grid Margin="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Content="S" Grid.Row="0" Grid.Column="0" Margin="0,0,8,0"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Soap.Subjective}" AcceptsReturn="True" TextWrapping="Wrap"/>

                <Label Content="O" Grid.Row="1" Grid.Column="0" Margin="0,4,8,0"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Soap.Objective}" AcceptsReturn="True" TextWrapping="Wrap"/>

                <Label Content="A" Grid.Row="2" Grid.Column="0" Margin="0,4,8,0"/>
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Soap.Assessment}" AcceptsReturn="True" TextWrapping="Wrap"/>

                <Label Content="P" Grid.Row="3" Grid.Column="0" Margin="0,4,8,0"/>
                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Soap.Plan}" AcceptsReturn="True" TextWrapping="Wrap"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
